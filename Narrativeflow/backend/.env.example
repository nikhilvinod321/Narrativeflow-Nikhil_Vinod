# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/narrativeflow
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/narrativeflow

# Ollama AI (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ChromaDB (Vector Database)
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=nomic-embed-text

# Environment
ENVIRONMENT=development

# AI Generation Settings
MAX_TOKENS_PER_GENERATION=200
TEMPERATURE_CREATIVE=0.9
TEMPERATURE_BALANCED=0.7
TEMPERATURE_PRECISE=0.3

# Per-feature token limits (lower = faster, lower quality)
MAX_TOKENS_STORY_GENERATION=100
MAX_TOKENS_RECAP=100
MAX_TOKENS_SUMMARY=100
MAX_TOKENS_GRAMMAR=100
MAX_TOKENS_BRANCHING=100
MAX_TOKENS_STORY_TO_IMAGE_PROMPT=100
MAX_TOKENS_IMAGE_TO_STORY=100
MAX_TOKENS_CHARACTER_EXTRACTION=100
MAX_TOKENS_REWRITE=100
MAX_TOKENS_DIALOGUE=100
MAX_TOKENS_BRAINSTORM=100
MAX_TOKENS_STORY_BIBLE=100
MAX_TOKENS_STORY_BIBLE_UPDATE=100
